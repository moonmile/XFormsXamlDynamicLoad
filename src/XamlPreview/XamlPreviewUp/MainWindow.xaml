<Window x:Class="XamlPreviewUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlPreviewUp"
        mc:Ignorable="d"
        Title="XamlPreview Upload Tool" Height="350" Width="347">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="291*"/>
        </Grid.RowDefinitions>
        <TextBox 
            x:Name="textIp" Height="50" TextWrapping="Wrap" 
            Text="172.16.0.17"
            FontSize="36"
            />
        <Button 
            x:Name="btn1"
            FontSize="20"
            Content="Drop XAML" Margin="10" Grid.Row="1"
            AllowDrop="True"
            Drop="Button_Drop"
            Click="btn1_Click"
            
            />

    </Grid>
</Window>
