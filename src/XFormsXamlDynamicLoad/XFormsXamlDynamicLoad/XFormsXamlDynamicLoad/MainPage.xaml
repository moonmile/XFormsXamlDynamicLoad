<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XFormsXamlDynamicLoad"
             x:Class="XFormsXamlDynamicLoad.MainPage">

    <StackLayout>
        <Label Text="Xaml Dynamic Loader" />
        <Button Text="open sub page" Clicked="Button_Clicked" />
        <Label Text="{Binding Count, StringFormat='{0} clicked'}" />
    </StackLayout>
</ContentPage>